@model AAO_App.Models.Driver
@{
    Layout = "_NewUser";
    ViewData["Title"] = "Create New User";
}

<img id="Icon" src="~/images/logo.svg" alt="Alex Andersen logo" />

<div id="DotHolder">

</div>

<form id="CreateUserForm" method="POST" asp-action="Create">

    <div class="Formula Displayed">
        <div class="form-group-item">
            <label>Fornavn</label>
            <input type="text" asp-for="Firstname">
            <span asp-validation-for="Firstname" class="text-danger"></span>
        </div>
        <div class="form-group-item">
            <label>Efternavn</label>
            <input type="text" asp-for="Lastname">
            <span asp-validation-for="Lastname" class="text-danger"></span>
        </div>
        <div class="form-group-item">
            <label>Telefon nr</label>
            <input type="number" asp-for="Phone">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group-item">
            <label>Bopæl</label>
            <input type="text" asp-for="Addresse">
            <span asp-validation-for="Addresse" class="text-danger"></span>
        </div>
        <div class="form-group-item">
            <label>FødselsDato</label>
            <input type="date" asp-for="DoB">
            <span asp-validation-for="DoB" class="text-danger"></span>
            <div class="ButtonContainer">
                <button style="background:lightgray; color: black; visibility: hidden" type="button" asp-action="Index" asp-controller="Login" class="ButtonModal">Tilbage</button>
                <button type="button" id="Next" onclick="NextSlide()" class="ButtonModal">Næste</button>
            </div>
        </div>
    </div>
    <div class="Formula">
        <div class="form-group-item">
            <label asp-for="Locations.City" class="control-label">Præference By</label>
            <select asp-for="Locations.City" name="City">
                <option value="1">Odense</option>
                <option value="2">Århus</option>
                <option value="3">Moss</option>
                <option value="4">Helsingborg</option>
            </select>
            <span asp-validation-for="Locations.City" class="text-danger"></span>
        </div>
        <div class="form-group-item">
            <label asp-for="Password">Kodeord</label>
            <input asp-for="Password" class="form-control" placeholder="Max 6 tegn!" />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
        <div class="form-group-item">
            <label asp-for="ProfileImage">Profil Billede</label>
            <input asp-for="ProfileImage" class="form-control" />
        </div>

        <div class="form-group-item">
            <label asp-for="License" class="control-label">Førekort</label>
            <input type="checkbox" asp-for="License" class="form-control" />
            <span asp-validation-for="License" class="text-danger"></span>
        </div>
        <div class="form-group-item">
            <div class="ButtonContainer" id="SecondContainer">
                <input type="Submit" value="Anmod Om Registrering" class="WideButton">
            </div>
            <button style="background:lightgray; color: black" type="button" id="Prev" onclick="PrevSlide()" class="ButtonModal">Tilbage</button>
        </div>
    </div>
</form>

<script src="../../js/Modal.min.js"></script>
<script src="../../js/CreateUserScript.min.js"></script>
