@model AAO_App.Models.Driver
@{
    Layout = "_NewUser";
    ViewData["Title"] = "Create New User";
}

<img id="Icon" src="images/logo.svg" alt="Alex Andersen logo" />

<div id="DotHolder">

</div>

<form id="CreateUserForm" method="POST" asp-controller="NewDrivers" asp-action="Create">

    <div class="Formula Displayed">
        <label>Fornavn</label>
        <input asp-for="Firstname">
        <label>Efternavn</label>
        <input asp-for="Lastname">
        <label>Telefon nr</label>
        <input asp-for="Phone">
        <label>Bopæl</label>
        <input asp-for="Addresse">
        <label>FødselsDato</label>
        <input asp-for="DoB">
        <div class="ButtonContainer">
            <button style="background:lightgray; color: black" type="button" asp-controller="Login" asp-action="Index" class="ButtonModal">Tilbage</button>
            <button type="button" id="Next" onclick="NextSlide()" class="ButtonModal">Næste</button>
        </div>
    </div>

    <div class="Formula">
        <label asp-for="Locations.City" class="control-label">Præference By</label>
        <select asp-for="Locations.City" name="City">
            <option value="1">Odense</option>
            <option value="2">Århus</option>
            <option value="3">Moss</option>
            <option value="4">Helsingborg</option>
        </select>

        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" placeholder="Max 6 tegn!" />

        <label asp-for="ProfileImage" class="control-label"></label>
        <input asp-for="ProfileImage" class="form-control" />

        <label class="control-label">Førekort</label>
        <input type="checkbox" asp-for="License" class="form-control" />

        <div class="ButtonContainer" id="SecondContainer">
            <input type="Submit" value="Anmod Om Registrering" class="WideButton">
        </div>
        <button style="background:lightgray; color: black" type="button" id="Prev" onclick="PrevSlide()" class="ButtonModal">Tilbage</button>

    </div>
</form>

<script src="../../js/Modal.min.js"></script>
<script src="../../js/CreateUserScript.min.js"></script>